<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#88000000"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:textColor="#000"
                android:text="Código de Seguridad"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/pop_title"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="fill_parent"
                android:textColor="#000"
                android:text="Ingresa el código de seguridad de tu tarjeta"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:id="@+id/pop_text"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="fill_parent"
                android:textColor="#f00"
                android:text="Revisa tu código de seguridad"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:id="@+id/pop_error"
                android:layout_height="wrap_content"
                />

            <EditText
                android:layout_width="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/code"
                android:hint="cvv" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:layout_weight=".5">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_marginRight="5dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:id="@+id/listo"

                    android:background="@drawable/brounded_corners">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="#fff"
                        android:text="Pagar"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:id="@+id/nop"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/brounded_corners">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="#fff"
                        android:text="Cancelar"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                       />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>