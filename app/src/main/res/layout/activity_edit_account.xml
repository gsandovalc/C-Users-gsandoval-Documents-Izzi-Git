<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_account"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/izzi_background"
    tools:context="telecom.televisa.com.izzi.EditAccountActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <include layout="@layout/headerextra" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bebebe"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#f2f2f6">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_centerVertical="true"
                android:background="@drawable/addfoto"
                android:clickable="true"
                android:onClick="foto"
                android:layout_marginLeft="35dp"
                android:layout_height="75dp">


            </LinearLayout>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"
                android:padding="4dp"
                android:src="@drawable/avatar2"
                android:clickable="true"
                android:layout_marginLeft="15dp"
                android:onClick="foto"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                app:riv_corner_radius="100dip"
                app:riv_oval="true"
                />

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                    android:orientation="horizontal"
                android:background="#fff"
                >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/usuario"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#828282"
                        android:text="Nombre"
                        android:textAllCaps="true"
                        android:textSize="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#000"
                        android:text="NOMBRE"
                        android:textSize="16dp"
                        android:layout_marginLeft="55dp"
                        android:id="@+id/nombre"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#bebebe"></LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/usuario"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#828282"
                        android:text="Número de cuenta"
                        android:textSize="15dp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#000"
                        android:text="NOMBRE"
                        android:textSize="16dp"
                        android:layout_marginLeft="55dp"
                        android:id="@+id/cuenta"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#bebebe"></LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/sobre"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#828282"
                        android:text="Email"
                        android:textSize="15dp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#000"
                        android:text="NOMBRE"
                        android:textSize="16dp"
                        android:layout_marginLeft="55dp"
                        android:id="@+id/mail"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#bebebe"></LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pass3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#828282"
                        android:text="Tu contraseña anterior:"
                        android:textSize="15dp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:id="@+id/passwd2"
                        android:hint="Contraseña anterior"
                        android:focusableInTouchMode="true"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pass2"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:background="#fff"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#828282"
                        android:text="Tu nueva contraseña:"
                        android:textSize="15dp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:id="@+id/passwd"
                        android:hint="Contraseña"
                        android:focusableInTouchMode="true"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pass1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/passcandpng"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#828282"
                        android:text="Contraseña"
                        android:textSize="15dp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#000"
                        android:text="*********"
                        android:textSize="16dp"
                        android:layout_marginLeft="55dp"

                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#bebebe"></LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:clickable="true"
                android:onClick="nextStep"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_gravity="right"
                    android:id="@+id/next"
                    android:layout_marginRight="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/adelante"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:clickable="true"
                android:id="@+id/prev2"
                android:onClick="prevStep"
                android:visibility="gone"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_gravity="left"
                    android:id="@+id/back"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/regresar"/>
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/mobile"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#828282"
                        android:text="Teléfono móvil"
                        android:textSize="15dp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#000"
                        android:text="NOMBRE"
                        android:textSize="16dp"
                        android:layout_marginLeft="55dp"
                        android:id="@+id/movil"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#bebebe"></LinearLayout>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/direcc"
                        android:id="@+id/imageView4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#828282"
                        android:text="Dirección"
                        android:textSize="15dp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#000"
                        android:text="NOMBRE"
                        android:textSize="16dp"
                        android:layout_marginLeft="55dp"
                        android:id="@+id/address"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#bebebe"></LinearLayout>
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:onClick="domicilia"
                android:clickable="true"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:background="#fff"
                        >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/cardg"
                            android:id="@+id/imageView5" />

                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#828282"
                            android:text="Domiciliacion"
                            android:textSize="15dp"
                            android:textAllCaps="true"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#fff"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#000"
                            android:text="NOMBRE"
                            android:textSize="16dp"
                            android:layout_marginLeft="55dp"
                            android:id="@+id/tardom"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:clickable="true"
                    android:onClick="nextDomi"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_gravity="right"

                        android:layout_marginRight="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/adelante"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#bebebe"></LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
