<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/izzi_background"
    tools:context="telecom.televisa.com.izzi.RegistroPaso3">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:id="@+id/imageView"
        android:src="@drawable/logoizzi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:text="Éxito :)"
        android:textColor="#000"
        android:id="@+id/textView"
        android:textSize="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Hemos enviado un correo electrónico a :"
            android:textColor="#000"
            android:id="@+id/textView2"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Hemos enviado un correo electrónico a :"
            android:textColor="#000"
            android:id="@+id/email"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Por favor revisa tu bandeja de entrada"
            android:textColor="#000"

            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:onClick="resend"
        android:gravity="center"
        android:text="¿No recibiste el correo electrónico?"
        android:textColor="#D60270"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="Finalizar"
        android:background="#D60270"
        android:clickable="true"
        android:onClick="close"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

</RelativeLayout>
