<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:background="@color/izzi_background"
    tools:context="telecom.televisa.com.izzi.RegistroStep2Activity">

    <ImageView
        android:id="@+id/show_menu"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="closeView"
        android:src="@drawable/regresar" />


    <ImageView
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:id="@+id/imageView"
        android:src="@drawable/logoizzi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Selecciona una opción"
        android:textColor="#000"
        android:id="@+id/textView"
        android:textSize="17sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="Confirmar registro"
        android:background="#D60270"
        android:clickable="true"
        android:onClick="registro"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:id="@+id/telcont"
            android:clickable="true"
            android:layout_height="60dp">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:orientation="vertical"
                    android:id="@+id/radio1"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/radiooff"
                    android:layout_marginLeft="20dp"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"

                        android:background="@drawable/roval"
                        android:id="@+id/radioon1"
                        android:orientation="vertical"
                        android:layout_margin="5dp"></LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="60dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:text="Deseo confirmar mi cuenta, mediante un correo electrónico"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:id="@+id/smsc"
            android:clickable="true"
            android:layout_height="60dp">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:orientation="vertical"
                    android:id="@+id/radio2"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/radiooff"
                    android:layout_marginLeft="20dp"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:visibility="gone"
                        android:background="@drawable/roval"
                        android:id="@+id/radioon2"
                        android:orientation="vertical"
                        android:layout_margin="5dp"></LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="60dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="Deseo confirmar mi cuenta, mediante un mensaje de texto (SMS)."/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
