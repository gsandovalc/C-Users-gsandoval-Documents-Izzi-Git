<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#88000000"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="fill_parent"
       android:background="#fff"
       android:orientation="vertical"
       android:layout_margin="20dp"
       android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:textColor="#000"
            android:text="Domiciliar tarjeta"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:id="@+id/pop_title"
            android:layout_height="wrap_content"
            />
       <TextView
           android:layout_width="fill_parent"
           android:textColor="#000"
           android:text="¿Deseas activar el cargo automático de tus servicios a esta tarjeta?"
           android:gravity="center"
           android:layout_marginTop="5dp"
           android:textSize="16dp"
           android:id="@+id/pop_text"
           android:layout_height="wrap_content"
           />

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="40dp"
           android:layout_margin="15dp"
           android:orientation="horizontal"
           android:layout_weight=".5">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight=".5"
               android:layout_marginRight="5dp"
               android:layout_height="40dp"
               android:clickable="true"
               android:id="@+id/listo"

               android:background="@drawable/brounded_corners">
           <TextView
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:textColor="#fff"
               android:text="De acuerdo"
               android:textStyle="bold"
               android:textSize="15dp"
               android:layout_gravity="center"
               android:gravity="center"
               />
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight=".5"
               android:layout_height="40dp"
               android:clickable="true"
               android:id="@+id/nop"
                android:layout_marginLeft="5dp"
               android:background="@drawable/brounded_corners">
               <TextView
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:textColor="#fff"
                   android:text="En otra ocasión"
                   android:textStyle="bold"
                   android:textSize="15dp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   />
           </LinearLayout>
           </LinearLayout>
       </LinearLayout>

</RelativeLayout>
</RelativeLayout>