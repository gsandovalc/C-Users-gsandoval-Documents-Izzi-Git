<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/izzi_background"
    tools:context="telecom.televisa.com.izzi.LegalesActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/vista"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/headerextra" />



        <LinearLayout
            android:layout_width="fill_parent"

            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:background="@drawable/rounded_corners"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="legalesIzzi"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:text="Términos y Condiciones Legales izzi"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:id="@+id/textView10" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"

                    android:src="@drawable/flecha"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:background="@drawable/orounded_corners"
                android:layout_marginTop="5dp"
                android:clickable="true"

                android:onClick="legalesIzziApp"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:text="Términos y Condiciones del App"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/flecha"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:background="@drawable/brounded_corners"
                android:clickable="true"
                android:onClick="privIzzi"
                android:layout_marginTop="5dp"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:text="Aviso de privacidad"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/flecha"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <WebView
        android:layout_width="fill_parent"
        android:background="#fff"
        android:id="@+id/webview"
        android:visibility="gone"
        android:layout_marginTop="46dp"
        android:layout_height="fill_parent">

    </WebView>

</RelativeLayout>
