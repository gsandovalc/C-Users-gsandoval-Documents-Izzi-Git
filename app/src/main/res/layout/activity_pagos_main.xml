<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="telecom.televisa.com.izzi.PagosMainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/vista"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">
    <include layout="@layout/headerextra" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="#55dfdfdf"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="1dp"

            android:layout_height="120dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="0dp"

                android:layout_weight=".5"
                android:orientation="vertical"
                android:background="#55dfdfdf"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="#fff"
                    android:layout_weight=".5">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:textColor="#000"
                            android:gravity="center"

                            android:layout_weight=".5"
                            android:text="Mes de facturación"
                            />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:id="@+id/fechaTextMonth"
                        android:layout_weight=".5"
                        android:textStyle="bold"
                        android:text="Junio"
                        />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="1dp"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_weight=".5">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:id="@+id/leyenda1Text"
                        android:textColor="#000"
                        android:text="Fecha límite de pago"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_weight=".5"
                        android:id="@+id/fechaText"
                        android:textStyle="bold"
                        android:text="Junio"
                        />
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textColor="#000"
                        android:gravity="center_horizontal|bottom"
                        android:layout_weight=".5"
                        android:text="Total a pagar"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:gravity="center_horizontal|top"
                        android:textSize="20sp"
                        android:textColor="#FFA807"
                        android:layout_weight=".5"
                        android:id="@+id/totalText"
                        android:textStyle="bold"
                        android:text="$100.00"
                        />
                </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:text="Estas son tus tarjetas registradas"
            android:textStyle="bold"
            android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="45dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:onClick="payAccount"
            android:background="@drawable/orounded_corners">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Pagar"
                android:textColor="#FFf"
                android:textSize="17sp"
                android:gravity="center"

                android:layout_centerHorizontal="true" />
        </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="45dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/lastButton"
        android:clickable="true"
        android:onClick="editCard"
        android:background="@drawable/grounded_corners">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:alpha="125"
            android:src="@drawable/editar"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Editar Tarjetas"
            android:textColor="#FFA807"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_centerHorizontal="true" />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
