<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    tools:context="telecom.televisa.com.izzi.UserActivity">
    <include layout="@layout/menu"/>

<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/vista"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <include layout="@layout/header" />
<RelativeLayout
    android:layout_width="fill_parent"
    android:id="@+id/cuadroParent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="190dp"
        android:background="#16BEAF"
        android:layout_alignParentLeft="true"
        android:id="@+id/cuadroInfo1"
        android:layout_height="130dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:text="Bienvenido"
            android:layout_marginTop="50dp"
            android:textColor="#ffffff"
            android:id="@+id/textView4" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:text="Carlos"
            android:textColor="#ffffff"
            android:id="@+id/nameText" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="190dp"
        android:background="#15B3A4"
        android:layout_alignParentRight="true"
        android:id="@+id/cuadroInfo2"
        android:layout_height="130dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:text="Teléfono"
            android:layout_marginTop="50dp"

            android:textColor="#ffffff"
            android:id="@+id/textView5" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:text="55 52 43 03 30"
            android:textColor="#ffffff"
            android:id="@+id/phoneText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:text="Número de cuenta"
            android:layout_marginTop="2dp"
            android:textColor="#ffffff"
            android:id="@+id/textView7" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:text="11088924"
            android:textColor="#ffffff"
            android:id="@+id/accountText" />

    </LinearLayout>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageView1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="4dp"
        android:src="@drawable/avatar1"
        android:clickable="true"
        android:onClick="foto"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:riv_corner_radius="100dip"
        app:riv_oval="true"
        app:riv_border_color="#fff"
        app:riv_border_width="1dp"

     />

</RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        android:id="@+id/scrollV"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:id="@+id/inerscroll"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:background="#ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"

        android:layout_height="117dp">
        <RelativeLayout
            android:layout_width="150dp"
            android:background="#55dfdfdf"
            android:id="@+id/cuadroInfo3"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:background="#ffffff"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:layout_marginBottom="1dp"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Tu servicio principal:"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:id="@+id/textView8" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="izzi + TV PackHD"
                    android:layout_marginTop="5dp"
                    android:id="@+id/paqueteText"

                    android:textColor="#D60270"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="15sp"

                    android:layout_centerHorizontal="true" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:background="@drawable/grounded_corners"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:onClick="servicios"
                android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver servicios"
                android:id="@+id/textView6"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="#D60270"
                android:textSize="13sp"
                android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </RelativeLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:background="#55dfdfdf"
        android:id="@+id/cuadroInfo4"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:background="#ffffff"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:layout_marginBottom="1dp"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Total a pagar"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="$1200"
                android:textStyle="bold"
                android:digits=""
                android:id="@+id/totalText"
                android:textColor="#ffa807"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"

                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Pagar antes de"
                android:id="@+id/leyenda1Text"
                android:textColor="#000000"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="03 de Julio 2015"
                android:id="@+id/fechaText"
                android:layout_alignParentBottom="true"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerHorizontal="true" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@drawable/grounded_corners"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:onClick="estadoCuenta"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado de cuenta"

                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="#ffa807"
                android:textSize="13sp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>




        <LinearLayout
        android:layout_width="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@drawable/rounded_corners"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="pay"
            android:layout_height="45dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/pagol"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="50dp"
                android:text="Pago en linea"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:id="@+id/textView10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"

                android:src="@drawable/flecha"
                android:layout_alignParentRight="true"
                 />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@drawable/orounded_corners"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:onClick="callPay"
            android:layout_height="45dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/pagot"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="50dp"
                android:text="Pago por teléfono"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/flecha"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@drawable/brounded_corners"
            android:clickable="true"
            android:onClick="establecimientos"
            android:layout_marginTop="5dp"
            android:layout_height="45dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/pagoe"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="50dp"
                android:text="Pago en establecimientos"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/flecha"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        </LinearLayout>


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_marginTop="15dp"
    android:layout_height="35dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:id="@+id/lastButton"
    android:clickable="true"
    android:onClick="pagos"
    android:background="@drawable/grounded_corners">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Ver historial de pagos"
        android:textColor="#D60270"
        android:textSize="15sp"
        android:gravity="center"

        android:layout_centerHorizontal="true" />
    </LinearLayout>
</LinearLayout>
  </ScrollView>
</LinearLayout>
</RelativeLayout>