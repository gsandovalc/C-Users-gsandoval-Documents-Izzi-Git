<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/izzi_background"
    tools:context="telecom.televisa.com.izzi.UserActivity">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:orientation="vertical"
    >
    <include layout="@layout/header" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bebebe"></LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/cuadroParent"
    android:clickable="true"
    android:onClick="ajustes"
    android:layout_height="wrap_content"
    android:minHeight="120dp"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"

            android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            android:src="@drawable/avatar2"
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:onClick="foto"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            app:riv_corner_radius="100dip"
            app:riv_oval="true"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="17dp"
                    android:textAllCaps="true"
                    android:text="Buenos días "
                    android:textColor="#585858"
                    android:id="@+id/greating" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="22dp"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="true"
                    android:text="Carlos"
                    android:textColor="#000"
                    android:id="@+id/nameText" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="13dp"
                                android:textColor="#999999"
                                android:layout_height="wrap_content"
                                android:text="Cuenta:"
                                android:id="@+id/textView8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="13dp"
                                android:textColor="#999999"
                                android:layout_height="wrap_content"
                                android:text="Teléfono:"
                                android:id="@+id/textView5" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="13dp"
                                android:textColor="#999"
                                android:layout_height="wrap_content"
                                android:text="Referencia:"
                                android:id="@+id/textView6" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:text="55 52 43 03 30"
                                android:textColor="#000"
                                android:id="@+id/accountText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:text="55 52 43 03 30"
                                android:textColor="#000"
                                android:id="@+id/phoneText" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:text="55 52 43 03 30"
                                android:textColor="#000"
                                android:id="@+id/referenceText" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

     </LinearLayout>
    <ImageView
        android:layout_width="10dp"
        android:layout_marginTop="50dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:alpha=".4"
        android:src="@drawable/adelante"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:clickable="true"
        android:onClick="pay"
        >

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:background="#77a3a8"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Pago en Línea"
            android:textSize="13dp"
                android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mifactura"
                    android:layout_height="75dp"
                    android:id="@+id/imageView3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="$1200"
                        android:textStyle="bold"
                        android:digits=""
                        android:id="@+id/totalText"
                        android:textColor="#666"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:textSize="30dp"
                        android:layout_centerInParent="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pagar antes de:"
                            android:id="@+id/leyenda1Text"
                            android:textColor="#666"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_centerHorizontal="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03 de Julio 2015"
                            android:id="@+id/fechaText"
                            android:layout_alignParentBottom="true"
                            android:textColor="#666"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="2dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_centerHorizontal="true" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="10dp"
            android:layout_marginTop="70dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:alpha=".4"
            android:src="@drawable/adelante"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wifiinfo"
            android:minHeight="120dp"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@color/izzi_naranja"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Mi Wifi"
                    android:textSize="13dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginLeft="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="#fff"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="75dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/wifilogo"
                        android:src="@drawable/miwifi"
                        android:layout_height="75dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight=".4">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="13dp"
                                    android:textColor="#999999"
                                    android:layout_height="wrap_content"
                                    android:text="Mi red:"
                                    android:id="@+id/textView9" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="13dp"
                                    android:textColor="#999999"
                                    android:layout_height="wrap_content"
                                    android:text="Contraseña:"
                                    android:id="@+id/textView11" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="13dp"
                                    android:textColor="#999"
                                    android:layout_height="wrap_content"
                                    android:text="Dispositivos conectados:"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="5dp"
                                android:layout_weight=".6">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="13dp"
                                    android:id="@+id/ssid"
                                    android:textColor="#000"
                                    android:layout_height="wrap_content"
                                    android:text="Nombre de mi red"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:id="@+id/ssid_pass"
                                    android:layout_height="wrap_content"
                                    android:text="Contraseña"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:id="@+id/ssid_peers"
                                    android:layout_height="wrap_content"
                                    android:text="Dispositivos conectados:"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:id="@+id/wifiNOOK"
                android:visibility="gone"
                android:clickable="true"
                android:onClick="ayudaa"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="105dp"
                android:layout_height="85dp">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Tu red WiFi está apagada.  ¿Deseas que te ayudemos?"
                    android:layout_centerVertical="true"
                    android:textColor="#666"
                    android:layout_marginRight="45dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/adelante"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:id="@+id/wifiOFFLINE"
                android:clickable="true"
                android:onClick="ayudaa"

                android:layout_marginTop="35dp"
                android:layout_marginLeft="105dp"
                android:layout_height="85dp">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Tu equipo está  fuera de línea. ¿Deseas que te ayudemos?"
                    android:layout_centerVertical="true"
                    android:textSize="13dp"
                    android:textColor="#666"
                    android:layout_marginRight="45dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/adelante"
                    android:alpha=".4"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:id="@+id/noDexter"
                android:layout_marginTop="35dp"
                android:clickable="true"
                android:onClick="refresh"
                android:layout_marginLeft="105dp"
                android:layout_height="85dp">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Desconexión temporal de tu red. Se resolverá en breve."
                    android:layout_centerVertical="true"
                    android:textSize="13dp"
                    android:textColor="#666"
                    android:layout_marginRight="45dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/refresh_nodexter"
                    android:alpha=".4"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:clickable="true"
        android:onClick="servicios"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="#d60270"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Mis Servicios"
                android:textSize="13dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#fff"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/servicios"
                    android:layout_height="75dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#6f6f6f"
                            android:layout_height="wrap_content"
                            android:text="Mi servicio actual:"
                            android:id="@+id/textView7" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:text="55 52 43 03 30"
                            android:textColor="#6f6f6f"
                            android:id="@+id/paqueteText" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@color/izzi_rosa"
            android:textColor="#fff"
            android:text="Crece tus servicios"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:textSize="13dp"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_marginTop="70dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:alpha=".4"
            android:src="@drawable/adelante"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="establecimientos"
        android:minHeight="120dp"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@color/izzi_amarillo"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Mi código de barras"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#fff"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_height="60dp"
                            android:id="@+id/codebar"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#6f6f6f"
                        android:id="@+id/codetext"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Con este código puedes pagar en Tiendas izzi y en tiendas de Grupo Walmart."
                        android:textColor="#6f6f6f"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="10dp"
            android:layout_marginTop="70dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:alpha=".4"
            android:src="@drawable/adelante"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
</LinearLayout>
    </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
