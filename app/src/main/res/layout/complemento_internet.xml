<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:padding="5dp"
    android:clickable="true"
    android:onClick="intclick"
    android:orientation="vertical" android:layout_width="130dp"
    android:layout_height="130dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#9d9d9d"
        android:padding="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:padding="5dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#717171"
                android:gravity="center_horizontal"
                android:textSize="17dp"
                android:id="@+id/intextname"
                android:maxHeight="50dp"

                android:text="izzi con 100 Megas"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/izzi_rosa"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:text="+ "
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:gravity="left"
                    android:id="@+id/extprice"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:text="$160 mas al mes"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/shopcart"
            android:id="@+id/icon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
    </LinearLayout>