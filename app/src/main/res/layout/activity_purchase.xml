<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/izzi_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="telecom.televisa.com.izzi.PurchaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <include layout="@layout/headerextra" />
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#cacaca"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Detalle de mi compra"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:minHeight="150dp"
                    android:paddingBottom="20dp"
                    android:background="#eeeef3"
                    android:id="@+id/containerextras"
                    android:layout_height="wrap_content">


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@drawable/lineaspash"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="#eeeef3"

                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/price"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:text="uitorkjdnk"
                        android:gravity="center"/>
                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="17dp"
        android:layout_marginTop="30dp"
        android:textColor="#000"
        android:text="Al completar tu contratación, recibirás un correo electrónico confirmando los detalles de tu compra"
        android:gravity="left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:onClick="checkout"
            android:clickable="true"
            android:background="#71c9c1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Contratar"
                android:textColor="#fff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:clickable="true"
            android:onClick="showMenu"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="#cacaca">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="No, no lo quiero"
                android:textColor="#fff"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
