<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/izzi_background"
    tools:context="telecom.televisa.com.izzi.MediosDePagoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/vista"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include layout="@layout/headerextra" />
</LinearLayout>
    <RelativeLayout
        android:background="@drawable/tvknit"

        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="45dp"
            android:layout_height="70dp"
            android:id="@+id/codebar"
            />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/codetext"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="35dp"
            android:layout_marginRight="0dp"
            android:text="Estas son tus tarjetas registradas"
            android:textSize="13sp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Con este cÃ³digo puedes pagar en tiendas izzi y en tiendas de Grupo Walmart."
        android:textColor="#000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#fff"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/pinkclose"
                android:clickable="true"
                android:onClick="closeView"
                android:layout_height="30dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
