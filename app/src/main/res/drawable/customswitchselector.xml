<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_checked="true">
<shape
android:shape="rectangle"
    android:visible="true"
    android:useLevel="false">
    <stroke
        android:width="1dp"
        android:color="#bebebe"/>
<gradient
android:startColor="#fff"
    android:endColor="#fff"
    android:angle="270"/>
<corners
android:radius="45dp"/>
<size
android:width="30dp"
    android:height="30dp" />

    </shape>
    </item>
<item android:state_checked="false">
<shape
android:shape="rectangle"
    android:visible="true"
    android:dither="true"
    android:useLevel="false">
<gradient
android:startColor="#fff"
    android:endColor="#fff"
    android:angle="270"/>
<corners
android:radius="45dp"/>
    <stroke
        android:width="1dp"
    android:color="#bebebe"/>
<size
android:width="30dp"
    android:height="30dp" />

    </shape>
    </item>
    </selector>